    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                // Ask msbuild to generate full paths for file names.
               // "/property:GenerateFullPaths=true",
              //  "/t:build",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
               // "/consoleloggerparameters:NoSummary"
                "-o",
                "main",
                "-g",
                "main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": ".\\main",
            "problemMatcher": []
        }
    ]
}